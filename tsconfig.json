{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist/",
    "strictNullChecks": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./src",
    "lib": ["es5", "es6", "dom", "dom.iterable", "es2015", "es2016.array.include", "es2017.object"],
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "moduleResolution": "node",
    "paths": {
      "@styles": ["./styles/index"],
      "@styles/*": ["./styles/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils": ["./utils"],
      "@consts": ["./consts"],
      "@types": ["./types"]
    }
  }
}
